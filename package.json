{
  "name": "@metahub/karma-sass-preprocessor",
  "description": "Karma preprocessor to compile sass and scss files with sourcemap and watch support",
  "version": "0.0.0-development",
  "author": "Pierre Vanduynslager (https://github.com/pvdlg)",
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "6"
          }
        }
      ]
    ]
  },
  "bugs": {
    "url": "https://github.com/pvdlg/karma-sass-preprocessor/issues"
  },
  "dependencies": {
    "chokidar": "^2.0.0",
    "lodash": "^4.17.4",
    "minimatch": "^3.0.4"
  },
  "devDependencies": {
    "@metahub/karma-jasmine-jquery": "^2.0.0",
    "ava": "^2.0.0",
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "^3.0.0",
    "conventional-changelog-metahub": "^2.0.1",
    "fs-extra": "^7.0.0",
    "jasmine-core": "^3.0.0",
    "jasmine-jquery": "^2.1.1",
    "karma": "^3.0.0",
    "karma-babel-preprocessor": "^7.0.0",
    "karma-jasmine": "^2.0.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "node-sass": "^4.5.3",
    "nyc": "^13.1.0",
    "p-event": "^2.0.0",
    "pify": "^4.0.0",
    "proxyquire": "^2.0.0",
    "rimraf": "^2.6.1",
    "semantic-release": "^15.7.1",
    "sinon": "^7.1.1",
    "temp-dir": "^1.0.0",
    "tempy": "^0.2.0",
    "xo": "^0.23.0"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "lib"
  ],
  "homepage": "https://github.com/pvdlg/karma-sass-preprocessor#readme",
  "keywords": [
    "karma-plugin",
    "karma-preprocessor",
    "node-sass",
    "sass",
    "scss",
    "sourcemaps",
    "watcher"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "peerDependencies": {
    "karma": "*",
    "node-sass": ">=4"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "analyzeCommits": {
      "preset": "metahub",
      "releaseRules": "conventional-changelog-metahub/release-rules"
    },
    "generateNotes": {
      "preset": "metahub"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pvdlg/karma-sass-preprocessor.git"
  },
  "scripts": {
    "clean": "rimraf coverage && rimraf .nyc_output",
    "codecov": "codecov -f coverage/coverage-final.json",
    "compile": "rimraf lib && babel src --source-maps --out-dir lib",
    "lint": "xo",
    "prepublishOnly": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "semantic-release": "semantic-release",
    "test": "nyc ava -v"
  },
  "xo": {
    "prettier": true
  }
}
